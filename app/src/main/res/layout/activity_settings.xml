<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitySettings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/srcCompat"
        android:backgroundTint="@color/my_color_secondary"
        android:orientation="vertical">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkboxSystemTheme"
            android:text="@string/use_system_theme"
            android:textColor="@color/my_color_onPrimary"
            android:textSize="@dimen/textSize"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonTheme1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/elementSize"
            android:text="theme 01"
            android:textSize="@dimen/textSize" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonTheme2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/elementSize"
            android:text="theme 02"
            android:textSize="@dimen/textSize" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>