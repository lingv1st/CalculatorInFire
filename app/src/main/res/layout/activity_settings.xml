<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitySettings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/srcCompat"
        android:backgroundTint="@color/my_color_secondary"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textViewSettings"
            android:layout_width="match_parent"
            android:layout_height="@dimen/elementSize"
            android:background="@color/white"
            android:backgroundTint="@color/my_color_onPrimary"
            android:gravity="center_vertical|end"
            android:textSize="@dimen/textSize"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonThemeLight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/elementSize"
            android:text="@string/theme_light"
            android:textSize="@dimen/textSize" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonThemeDark"
            android:layout_width="match_parent"
            android:layout_height="@dimen/elementSize"
            android:text="@string/theme_dark"
            android:textSize="@dimen/textSize" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonTestIntent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/elementSize"
            android:text="@string/test_intent"
            android:textSize="@dimen/textSize" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>